<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:osgi="http://www.springframework.org/schema/osgi" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">


	<context:annotation-config />
	<context:component-scan base-package="santeclair.portal.vaadin.accueil" />
	
	<osgi:reference id="moduleFactoryService"
		interface="santeclair.portal.vaadin.module.api.ModuleFactoryService"
		cardinality="1..1" timeout="5000">
		<osgi:listener bind-method="setModuleFactoryService"
			unbind-method="unsetModuleFactoryService" ref="accueilFactory" />
	</osgi:reference>

</beans>